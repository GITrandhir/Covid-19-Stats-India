<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/rel1">

        <include layout="@layout/layout_title_home"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/rel2"
        android:layout_below="@id/rel1"
        android:background="@drawable/coronawarriors">



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rel3"
        android:layout_below="@id/rel2">

        <include layout="@layout/layout_centre_home"/>

        

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rel4"
        android:layout_below="@id/rel3">

        <include layout="@layout/layout_bottom1_home" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/rel5"
        android:layout_below="@id/rel4">





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rel6"
        android:layout_below="@id/rel5">

        <include layout="@layout/layout_bootom2_home" />



    </RelativeLayout>


     <RelativeLayout
        android:id="@+id/rel7"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/rel6">

        <ImageView
            android:id="@+id/ref"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_refresh"
            android:visibility="visible">

        </ImageView>



        <TextView
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="60dp"
            android:text="Developed by"
            android:textSize="13sp">

        </TextView>

        <TextView
            android:id="@+id/gitHubLink"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="60dp"
            android:text="Randhir Kumar"
            android:textColor="@color/blueHTTPLink"
            android:textSize="13sp">

        </TextView>


    </RelativeLayout>




</RelativeLayout>
